{{#with view}}
<div id="brand-container"></div>

<div class="space by-six"></div>

<div id="hello-container">
	{{I18n hello}}
</div>

<div class="space by-two"></div>

	{{#if venueUser }}

		<div id="login-buttons" class="center">

			{{view Yn.SingleBigButtonView class="enter-button is-grey button-text is-big is-font-black" 
				contentI18n="enter" 
				action="goToScan" }}

			{{view Yn.SingleBigButtonView class="enter-button is-blue button-text is-big is-font-black" 
				content="logout" 
				action="logout" }}

		</div>

	{{ else }}

		<div class="big-input-content">

			{{view Yn.InputView id="login-email" class="big-input up" 
				inputName="email"
				type="email"
				placeholderI18n="email" }} 

			{{view Yn.InputView id="login-password" class="big-input down" 
				inputName="password"
				type="password"
				placeholderI18n="password" }} 

		</div>

		<div id="login-buttons" class="center">

			{{view Yn.SingleBigButtonView class="enter-button is-grey button-text is-big is-font-black" 
				contentI18n="login" 
				action="goToScan" }}

		</div>

	{{/if}}

{{/with}}
