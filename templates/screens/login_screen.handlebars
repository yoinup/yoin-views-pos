{{#with view}}
<div id="brand-container"></div>

<div class="space by-three"></div>



<div class="space by-two"></div>

	{{#if venueUser }}

		<div class="logged-box">

		<div class="auth-buttons">

			{{view Yn.SingleBigButtonView class="auth-button is-orange button-text is-big is-font-white" 
				contentI18n="enter" 
				action="goToScan" }}

			
			{{view Yn.SingleBigButtonView class="auth-button is-black button-text is-big is-font-white" 
				contentI18n="logout" 
				action="logout" }}	

			
		</div>

		</div>		

	{{ else }}

		<div class="unlogged-box">

			<div class="big-input-content">

				{{view Yn.InputView id="username" class="big-input up" 
					inputName="username"
					type="username"
					placeholderI18n="username" }} 

				{{view Yn.InputView id="password" class="big-input down" 
					inputName="password"
					type="password"
					placeholderI18n="password" }} 

			</div>

			<div class="auth-buttons">

				{{view Yn.SingleBigButtonView class="auth-button is-grey button-text is-big is-font-black" 
					contentI18n="login"
					inputs="username password" 
					mixins="Yn.FormActionContent" 
					action="login" }}


				<div class="auth-button-logout about-us text is-big is-font-orange">{{I18n about_us}}</div>

			</div>

		</div>		

	{{/if}}

{{/with}}
