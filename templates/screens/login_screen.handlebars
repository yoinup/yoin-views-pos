{{#with view}}

  <div class="row one">
  </div>

  <div class="row two">
    <div id="login-brand-container" class="brand-container"></div>
  </div>

  <div class="row three">

    {{#if hasConnection }}

        <div class="login-box is-unlogged">

          <div class="big-input-content">

            {{view Yn.InputView id="username" class="big-input up" 
              inputName="username"
              type="username"
              placeholderI18n="username" }} 

            {{view Yn.InputView id="password" class="big-input down" 
              inputName="password"
              type="password"
              placeholderI18n="password" }} 

          </div>

          {{view Yn.SingleLargeButtonView class="is-grey is-font-black" 
            contentI18n="login"
            inputs="username password" 
            action="login" }}

        </div>		

    {{else}}

      <div class="text is-font-black is-center">{{I18n login_msg_reconnect}}</div>

      <div class="space by-three"></div>
      <div class="space by-three"></div>

      {{view Yn.SingleLargeButtonView class="is-grey is-font-black" 
        contentI18n="reconnect" 
        action="reconnect" }}

    {{/if}}

  </div>		

{{/with}}
