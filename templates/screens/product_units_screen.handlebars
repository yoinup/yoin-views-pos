{{#with view}}

{{#view Yn.HeaderView class="with-small-shadow"}}

  {{view Yn.MenuButtonView }}
	<div class="brand-container is-small"></div>

  {{view Yn.IconBtapView class="header-button rectangle-button l-right is-orange button-text is-small" 
    icon="e"
    action="refresh"}}

{{/view}}

{{#view Yn.ScrollerView class="screen-container"
  exclude=".header" }}

  {{#if productUnits.isLoaded }}

    {{#if productUnits.length }}

      <div class="space by-one"></div>

      {{#each productUnits}}

        <div class="box">

          <div class="box-content">

            <div class="box-content-element one-column-table">


              <div class="name middle-column main">

                <div class="main-text">
                  {{product.name}}
                </div>

                <div class="detail-text">
                  {{localizer}}
                </div>

              </div>

            </div>

          </div>

        </div>

        <div class="space by-one"></div>

      {{/each}}

      <div class="space by-one"></div>

    {{else}}
      <div class="empty-view is-absolute"></div>
      <div class="empty-text is-absolute">{{I18n empty_invitations}}</div>
    {{/if}}

  {{else}}
    {{view Yn.SpinnerView}}
  {{/if}}

{{/view}}

{{/with}}
