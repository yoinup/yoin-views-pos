    -->

    <div class="space by-three"></div>

    <div class="box">
      <div class="box-content has-padding">
          {{view Yn.InputView id="input-brandname" 
            class="main-text is-transparent"
            inputName="brandname"
            type="text"
            placeholderI18n="name"
            valueBinding="brand.name" }}
      </div>
    </div>

    <div class="space by-one"></div>

    <div class="box">
      <div class="box-content has-padding">
          {{view Yn.InputView id="input-venuename" 
            class="main-text is-transparent"
            inputName="venuename"
            type="text"
            placeholderI18n="name"
            valueBinding="venue.name" }}
      </div>

      <div class="box-content  has-padding">
          {{view Yn.InputView id="input-venueaddress" 
            class="main-text is-transparent"
            inputName="venueaddress"
            type="text"
            placeholderI18n="address"
            valueBinding="venue.address" }}
      </div>

      <div class="box-content  has-padding">

          {{view Yn.InputView id="input-venuezip" 
            class="main-text is-transparent"
            inputName="venuezip"
            type="text"
            placeholderI18n="zip"
            valueBinding="venue.zip" }}
        
      </div>

    </div>

    <div class="space by-one"></div>

    <div class="box">

      {{#view Yn.BtapView class="box-content has-tap"
        action="goToPassword" }} 

        <div class="box-content-element two-column-table">

          <div class="left-column main main-text">
              {{I18n password_title}}
          </div>

          <div class="control right-column">
            <span class="icon is-icon-normal is-icon-grey with-text arrow"></span>
          </div>
        </div>

      {{/view}}

    </div>


    <div class="space by-one"></div>

    {{#if showCameraDeviceButton}}

      <div class="space by-one"></div>

      <div class="box">

        <div class="box-content">

          <div class="box-content-element two-column-table">

            <div class="main-text main left-column">
              {{I18n camera_device}}
            </div>

            <div class="control right-column">
              {{#view Yn.BtapView class="rectangle-button-adaptative is-grey button-text is-small is-font-black is-middle" 
                action="changeCamera" }}

                {{#if isDeviceFront }}
                  {{I18n camera_front}}
                {{else}}
                  {{I18n camera_back}}
                {{/if}}

              {{/view}}
            </div>

          </div>

        </div>

      </div>


    {{/if}}


    <div class="space by-one"></div>

    <div class="box">

      <div class="box-content">

        <div class="box-content-element two-column-table">

          <div class="main-text main left-column">
            {{I18n environment}}
            {{#if isSandbox }}
              ({{I18n sandbox_env}})
            {{else}}
              ({{I18n live_env}})
            {{/if}}
          </div>

          <div class="control right-column">
            {{#view Yn.BtapView class="rectangle-button-adaptative is-blue button-text is-small is-font-white is-middle" 
              action="changeEnvironment" }}

              {{#if isSandbox }}
                {{I18n move_to_live}}
              {{else}}
                {{I18n move_to_sandbox}}
              {{/if}}

            {{/view}}
          </div>

        </div>

      </div>

    </div>

    {{view Yn.MainButtonView class="is-red"
        contentI18n="close_session"
        action="logout" }}

{{/view}}

{{/with}}
