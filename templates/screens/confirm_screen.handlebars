{{#with view}}

{{#view Yn.HeaderView id="confirm-header" class="with-small-shadow"}}

	{{view Yn.BackButtonView }}
	<div class="brand-container"></div>

{{/view}}

{{#view Yn.ScrollerView class="screen-container"
	exclude="confirm-header" }}

	<div class="space by-two"></div>

	<div id="confirm-box-product" class="box">

		<div id="confirm-box-product-content" class="box-content">

			<div id="confirm-box-product-content-element">

				<div id="product-left-l">

					{{view Yn.SquareImageView class="is-big fix-scrolling-touch"
						contentBinding="venue.brand"
						withIcon=true }}

				</div>

				<div id="product-middle-l">

					<div class="confirm-product-name">
						{{selected.product.name}}
					</div>

				</div>

			</div>

			<div id="products">

				{{view Yvi.ConfirmBoxProductSwipeView 
					contentBinding="invitations"
					selectedBinding="selected"}}

				{{view Yn.CarouselCirclesView class="fix-scrolling-touch"
					contentBinding="invitations"
					selectedBinding="selected"}}

			</div>

			<div id="confirm-box-product-description">

				{{selected.product.description}}

			</div>

		</div>

	</div>


	{{#if otherInvitations}}

		<div class="space by-two"></div>


		<div class="box">

			<div class="box-title-top">

				{{I18n other_products}}

			</div>

      <div class="box-content has-li">

				{{#each otherInvitations}}

          <div class="box-content-li has-tap">

            {{#view Yn.BtapView class="box-content-element two-column-table" 
              action="changeInvitation" actionContentBinding="this" }}

              <div class="main-text left-column">
                {{product.name}}
              </div>
              <div class="price-label right-column"> 
                {{product.price}} {{I18n currency_symbol}}
              </div>

            {{/view}}
					

          </div>

				{{/each}}

			</div>

		</div>

	{{/if}}


	<div class="space by-two"></div>


	<div class="box">

		<div class="box-title-top">

			{{I18n invited_by}}

		</div>

		<div class="box-content">

			{{view Yvi.UserShortBlockView contentBinding="selected.fromUser" }}

		</div>

		<div class="box-title-bottom">
								
			<div class="f-right">
			
				<span class="icon with-text is-icon-small" icon="w"></span>
				{{humanize dateBinding="selected.created" }}
			
			</div>

		</div>

	</div>


	<div class="space by-two"></div>


	<div class="box">

		<div class="box-title-top">

			{{I18n consignee}}

		</div>

		<div class="box-content">

			{{#if selected.toUser }}

				{{view Yvi.UserShortBlockView
					contentBinding="selected.toUser" }}

			{{else}}

				{{#if selected.creationFbId }}

					{{view Yvi.UserShortBlockView
						typeBinding="selected.creationType"
						fbIdBinding="selected.creationFbId"
						fbNameBinding="selected.creationUsername" }}

				{{else}}

					{{view Yvi.UserShortBlockView
						typeBinding="selected.creationType"
						phoneNumberBinding="selected.creationPhone"
						phoneNameBinding="selected.creationPhone" }}

				{{/if}}

			{{/if}}

		</div>

	</div>


	{{view Yn.MainButtonView class="is-green"
			contentI18n="confirm"
			action="confirm" }}



	<div class="box">

		<div class="box-title-top">

			{{I18n something_else_title}}

		</div>

		<div class="box-content">

			{{view Yn.InputView id="login-email" class="single-input" 
					inputName="something-else"
					placeholderI18n="something_else_placeholder" }} 

		</div>

	</div>

	<div class="space by-two"></div>

{{/view}}

{{/with}}


